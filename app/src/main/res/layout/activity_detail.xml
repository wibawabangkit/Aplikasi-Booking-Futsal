<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#4CAF50"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.androidtutorialshub.loginregister.activities.DetailActivity"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/imglapangan"
                    android:src="@drawable/lapangan"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Nama Lapangan"
                    android:id="@+id/txtlapangan"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:text="Detail Lapangan"
                    android:id="@+id/txthargalapangan"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="monospace"
                    android:text="Booking Hubungi Kami:"
                    android:id="@+id/txtdetailmakanan"/>
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="11dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/whatsapp"
                        android:id="@+id/whatsappp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="087886827825"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        android:fontFamily="serif"
                        android:textSize="18dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:id="@+id/nomorWA"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="11dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/whatsapp"
                        android:id="@+id/whatsapp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>